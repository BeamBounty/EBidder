@page "/sellers"
@attribute [Authorize]

<PageTitle>Sellers</PageTitle>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12 col-md-6">
        <RadzenText Text="Sellers" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
    </div>
    <div class="col-12 col-md-6 justify-content-start justify-content-md-end" style="display: flex; align-items: center; flex-wrap: wrap; gap: 0.5rem">
    <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true"
            Data="@sellers" Count=count LoadData=@Grid0LoadData  TItem="EBidderWeb.Server.Models.EBidder.Seller" RowSelect="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="EBidderWeb.Server.Models.EBidder.Seller" Property="SSN" Title="SSN">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EBidderWeb.Server.Models.EBidder.Seller" Property="Username" Title="Username">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EBidderWeb.Server.Models.EBidder.Seller" Property="Password" Title="Password">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EBidderWeb.Server.Models.EBidder.Seller" Property="SellerID" Title="SellerID">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EBidderWeb.Server.Models.EBidder.Seller" Property="Email" Title="Email">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EBidderWeb.Server.Models.EBidder.Seller" Property="Address" Title="Address">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EBidderWeb.Server.Models.EBidder.Seller" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="seller">
                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, seller)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </div>
</div>
