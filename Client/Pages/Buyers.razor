@page "/buyers"
@attribute [Authorize]

<PageTitle>Buyers</PageTitle>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12 col-md-6">
        <RadzenText Text="Buyers" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
    </div>
    <div class="col-12 col-md-6 justify-content-start justify-content-md-end" style="display: flex; align-items: center; flex-wrap: wrap; gap: 0.5rem">
    <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true"
            Data="@buyers" Count=count LoadData=@Grid0LoadData  TItem="EBidderWeb.Server.Models.EBidder.Buyer" RowSelect="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="EBidderWeb.Server.Models.EBidder.Buyer" Property="SSN" Title="SSN">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EBidderWeb.Server.Models.EBidder.Buyer" Property="Email" Title="Email">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EBidderWeb.Server.Models.EBidder.Buyer" Property="Address" Title="Address">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EBidderWeb.Server.Models.EBidder.Buyer" Property="Username" Title="Username">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EBidderWeb.Server.Models.EBidder.Buyer" Property="BuyerID" Title="BuyerID">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="EBidderWeb.Server.Models.EBidder.Buyer" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="buyer">
                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, buyer)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </div>
</div>
